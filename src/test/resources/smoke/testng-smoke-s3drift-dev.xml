<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- S3 Drift Detection - DEV Only (10 tests: 2 pre-checks + 8 buckets) -->
<!-- Usage: mvn test -DsuiteXmlFile=src/test/resources/smoke/testng-smoke-s3drift-dev.xml -->
<!-- Jira: ZP-774 | Branch-based selection: runs only DEV environment buckets -->
<suite name="Smoke - S3 Drift Detection (DEV)" verbose="0">
    <listeners>
        <listener class-name="com.egalvanic.listeners.ConsoleProgressListener"/>
    </listeners>
    <test name="Smoke - S3 Drift DEV">
        <groups>
            <run><include name="dev"/></run>
        </groups>
        <classes>
            <class name="com.egalvanic.tests.S3BucketPolicyDriftTest"/>
        </classes>
    </test>
</suite>
