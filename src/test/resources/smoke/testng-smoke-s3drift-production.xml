<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- 
  S3 Drift Detection - PRODUCTION (prod + bces-iq combined)
  Tests: 18 (2 shared pre-checks + 8 prod buckets + 8 bces-iq buckets)
  Usage: mvn test -DsuiteXmlFile=src/test/resources/smoke/testng-smoke-s3drift-production.xml
  Triggered by: production/main branch push
  Jira: ZP-774
-->
<suite name="Smoke - S3 Drift Detection (PRODUCTION)" verbose="0">
    <listeners>
        <listener class-name="com.egalvanic.listeners.ConsoleProgressListener"/>
    </listeners>
    <test name="Smoke - S3 Drift PROD + BCES-IQ">
        <groups>
            <run>
                <include name="prod"/>
                <include name="bces-iq"/>
            </run>
        </groups>
        <classes>
            <class name="com.egalvanic.tests.S3BucketPolicyDriftTest"/>
        </classes>
    </test>
</suite>
