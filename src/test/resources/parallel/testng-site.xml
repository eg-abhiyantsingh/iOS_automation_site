<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Site Selection Test Suite" verbose="0" time-out="300000">
    
    <!-- Custom Listener for Clean Console Output -->
    <listeners>
        <listener class-name="com.egalvanic.listeners.ConsoleProgressListener"/>
    </listeners>
    
    <test name="Site Selection Tests">
        <classes>
            <class name="com.egalvanic.tests.SiteSelectionTest">
                <methods>
                    <include name="TC_SS_014_verifySuccessfulSiteLoadNavigatesToDashboard"/>
                    <include name="TC_SS_028_verifyPendingSyncIndicatorOnWiFiIcon"/>
                    <include name="TC_SS_052_verifyWiFiIconShowsConnectionStatus"/>
                    <include name="TC_SS_053_verifyNoActiveJobCardOnDashboard"/>
                    <include name="TC_SS_054_verifyTapToSelectJobNavigatesToJobSelection"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
