<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Test Suite" verbose="2">
    <!-- 
    SMOKE TEST SUITE
    =================
    Purpose: Quick validation of critical paths and core functionality
    Execution time target: ~15-20 minutes
    
    Selection Criteria:
    1. Critical user flows (app launch, login, site selection)
    2. Core feature access (asset, location, connections navigation)
    3. High reliability tests (UI element visibility checks)
    4. Fast execution (no heavy data operations)
    -->
    
    <!-- Authentication Tests - Verify app launch and login flow -->
    <test name="Smoke - Authentication">
        <classes>
            <class name="com.egalvanic.tests.AuthenticationTest">
                <methods>
                    <include name="TC01_verifyWelcomeScreenUILoads"/>
                    <include name="TC04_verifyCompanyCodeFieldAcceptsInput"/>
                    <include name="TC07_verifyValidCompanyCodeNavigatesToLogin"/>
                    <include name="TC16_verifyLoginScreenUIElements"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Site Selection Tests - Verify site selection flow -->
    <test name="Smoke - Site Selection">
        <classes>
            <class name="com.egalvanic.tests.SiteSelectionTest">
                <methods>
                    <include name="TC_SS_001_verifySelectSiteScreenUIElements"/>
                    <include name="TC_SS_003_verifySiteListDisplaysAllAvailableSites"/>
                    <include name="TC_SS_007_verifySearchBarPlaceholderText"/>
                    <include name="TC_SS_014_verifySuccessfulSiteLoadNavigatesToDashboard"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Asset Tests - Verify asset management core functionality -->
    <test name="Smoke - Asset Management">
        <classes>
            <class name="com.egalvanic.tests.Asset_Phase1_Test">
                <methods>
                    <include name="ATS_ECR_01_verifyNewAssetScreenLoadsSuccessfully"/>
                    <include name="ATS_ECR_02_verifyAllUIFieldsAreVisible"/>
                    <include name="ATS_ECR_14_verifySelectAssetClass"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Location Tests - Verify location management core functionality -->
    <test name="Smoke - Location Management">
        <classes>
            <class name="com.egalvanic.tests.LocationTest">
                <methods>
                    <include name="TC_NB_001_verifyNewBuildingScreenUIElements"/>
                    <include name="TC_NB_003_verifySaveButtonStateChanges"/>
                    <include name="TC_NB_004_verifyBuildingNameAcceptsValidInput"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Connections Tests - Verify connections feature accessibility -->
    <test name="Smoke - Connections">
        <classes>
            <class name="com.egalvanic.tests.Connections_Test">
                <methods>
                    <include name="TC_CONN_001_verifyConnectionsTabInBottomNavigation"/>
                    <include name="TC_CONN_002_verifyConnectionsScreenHeader"/>
                    <include name="TC_CONN_004_verifyConnectionListDisplaysAllConnections"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
