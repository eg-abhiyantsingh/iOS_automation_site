<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="QUICK - Phase 2 Test (1 test)" parallel="false" verbose="0" time-out="300000">
