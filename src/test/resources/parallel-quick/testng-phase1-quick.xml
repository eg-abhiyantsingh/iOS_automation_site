    ============================================================
    -->

    <listeners>
        <listener class-name="com.egalvanic.listeners.ConsoleProgressListener"/>
    </listeners>

    <!-- Setup: Login and Select Site -->
    <test name="Setup - Login and Site">
        <classes>
            <class name="com.egalvanic.tests.SiteSelectionTest">
                <methods>
                    <include name="TC_SS_056_verifyPartialSyncFailureHandling"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Actual Test -->
    <test name="Phase 1 Quick Test">
        <classes>
            <class name="com.egalvanic.tests.Asset_Phase1_Test">
                <methods>
                    <include name="ATS_ECR_01_verifyNewAssetScreenLoadsSuccessfully"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
