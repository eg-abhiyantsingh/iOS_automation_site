<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!--
    eGalvanic iOS Automation - Full Suite
    =======================================
    Execution Order:
      1. S3 Drift Detection Smoke Test (42 tests, NO Appium)
      2. Authentication Tests (requires Appium + Simulator)
    
    The Smoke Test runs FIRST to verify infrastructure health.
    It does NOT start Appium or require an iOS Simulator.
    
    Jira: ZP-774 (Smoke Test)
-->
<suite name="eGalvanic iOS Automation Suite" verbose="2">

    <!-- SMOKE TEST: S3 Bucket Policy Drift Detection (No Appium) -->
    <test name="Smoke Test - S3 Bucket Policy Drift Detection">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.egalvanic.tests.S3BucketPolicyDriftTest"/>
        </classes>
    </test>

    <!-- MOBILE TESTS: Authentication (Requires Appium + Simulator) -->
    <test name="Authentication Tests">
        <classes>
            <class name="com.egalvanic.tests.AuthenticationTest"/>
        </classes>
    </test>

</suite>
